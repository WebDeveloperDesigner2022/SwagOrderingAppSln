        <Label Text="Swag Home" FontSize="Title" TextColor="Green" HorizontalOptions="CenterAndExpand"  VerticalOptions="Center" />

    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout >
            <Label Text="&#128024;" FontSize="Header" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
